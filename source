#include <iostream>
#include <clocale>
#include <cmath>
#include <ctime>
#include <chrono>
#include <fstream>
using namespace std;
void merge(int arr[], int p, int q, int r) {
    int n1 = q - p + 1;
    int n2 = r - q;
    int* L = new int[n1];
    int* M = new int[n2];
    for (int i = 0; i < n1; i++)
        L[i] = arr[p + i];
    for (int j = 0; j < n2; j++)
        M[j] = arr[q + 1 + j];
    int i, j, k;
    i = 0;
    j = 0;
    k = p;
    while (i < n1 && j < n2) {
        if (L[i] <= M[j]) {
            arr[k] = L[i];
            i++;
        }
        else {
            arr[k] = M[j];
            j++;
        }
        k++;
    }
    while (i < n1) {
        arr[k] = L[i];
        i++;
        k++;
    }
    while (j < n2) {
        arr[k] = M[j];
        j++;
        k++;
    }
}
int mergeSort(int arr[], int l, int r)
{
    int start_merge = clock();
    if (l < r) {
        int m = l + (r - l) / 2;
        mergeSort(arr, l, m);
        mergeSort(arr, m + 1, r);
        merge(arr, l, m, r);
    }
    int end_merge = clock();
    int search_merge = end_merge - start_merge;
    return search_merge;
}
int shell(int* a , int size)
{
	int start_shell = clock();
	int  j, gap, h;
	gap = size / 2;
	while (gap>0)
	{
		for (int i = 0; i < (size - gap); i++)
		{
			j = i;
			while ((j >= 0) && (a[j] > a[j + gap]))
			{
				h = a[j];
				a[j] = a[j + gap];
				a[j + gap] = h;
				j--;
			}
		}
		gap /= 2;
	}	
	int end_shell = clock();
	int search_shell = end_shell - start_shell;
	return search_shell;
}
void heapify(int arr[], int n, int i)
{
	int largest = i;
	int left = 2 * i + 1;
	int right = 2 * i + 2;
	if (left < n && arr[left] > arr[largest])
		largest = left;
	if (right < n && arr[right] > arr[largest])
		largest = right;
	if (largest != i)
	{
		swap(arr[i], arr[largest]);
		heapify(arr, n, largest);
	}
}
int heapSort(int arr[], int n)
{
    int start_heap = clock();
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);
    for (int i = n - 1; i >= 0; i--)
    {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0);
    }
    int end_heap = clock();
    int search_heap = end_heap - start_heap;
}
int main()
{
	int n;
	n = 100000;	
	ofstream fole;
	fole.open("output.txt");
	srand(time(0));
	fole << "test â„–  " << " shell " << " heap " << " merge " << " quick " << " insert " << endl;
	for (int t = 0; t < 15; t++)
	{
		int* a = new int[n];
		int* b = new int[n];
		int* c = new int[n];
		int* d = new int[n];
		int* e = new int[n];
		for (int i = 0; i < n; i++)
		{
			a[i] = rand() % n + 1;
			b[i] = a[i];
		}		
		int search_shell= shell(a, n);
		int search_heap = heapSort(b, n);
		int search_merge = mergeSort(c, 0, n - 1);
		fole << t << "          " << search_shell << "      " << search_heap << "      "<< search_merge << endl;
		delete[] a;
		delete[] b;
		
	}
	return 0;
}
